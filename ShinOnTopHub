-- ShinOnTop GUI ‚Äì Stylish Pink Theme with 4 Functional Buttons and Loading Screen

-- Loading Screen
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.Name = "LoadingScreen"

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 300, 0, 100)
frame.Position = UDim2.new(0.5, -150, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
frame.BorderSizePixel = 0

local uicorner = Instance.new("UICorner", frame)
uicorner.CornerRadius = UDim.new(0, 12)

local textLabel = Instance.new("TextLabel", frame)
textLabel.Size = UDim2.new(1, 0, 1, 0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Loading... 0%"
textLabel.Font = Enum.Font.FredokaOne
textLabel.TextScaled = true
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

for i = 1, 100 do
    textLabel.Text = "Loading... " .. i .. "%"
    wait(0.02)
end

screenGui:Destroy()

-- Main GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "ShinOnTopGUI"

local mainFrame = Instance.new("Frame", gui)
mainFrame.Size = UDim2.new(0, 400, 0, 350)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -175)
mainFrame.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true

local corner = Instance.new("UICorner", mainFrame)
corner.CornerRadius = UDim.new(0, 16)

local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "üå∏ ShinOnTop Hub üå∏"
title.Font = Enum.Font.FredokaOne
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1

-- Watermark
local watermark = Instance.new("TextLabel", mainFrame)
watermark.Size = UDim2.new(1, 0, 0, 20)
watermark.Position = UDim2.new(0, 0, 1, -20)
watermark.Text = "Made by: ShinOnTop"
watermark.Font = Enum.Font.FredokaOne
watermark.TextScaled = true
watermark.TextColor3 = Color3.fromRGB(255, 255, 255)
watermark.BackgroundTransparency = 1

-- Image (bottom)
local image = Instance.new("ImageLabel", mainFrame)
image.Size = UDim2.new(0, 50, 0, 50)
image.Position = UDim2.new(0, 10, 1, -60)
image.BackgroundTransparency = 1
image.Image = "rbxassetid://15001532647"

-- Toggle Button
local toggle = Instance.new("TextButton", gui)
toggle.Size = UDim2.new(0, 120, 0, 35)
toggle.Position = UDim2.new(0.5, -60, 0.9, 0)
toggle.Text = "Minimize / Maximize"
toggle.Font = Enum.Font.FredokaOne
toggle.TextScaled = true
toggle.BackgroundColor3 = Color3.fromRGB(255, 105, 180)
toggle.TextColor3 = Color3.fromRGB(255, 255, 255)

local cornerToggle = Instance.new("UICorner", toggle)
cornerToggle.CornerRadius = UDim.new(0, 12)

local minimized = false
toggle.MouseButton1Click:Connect(function()
    minimized = not minimized
    mainFrame.Visible = not minimized
end)

-- Button Creator
local function createButton(name, position, callback)
    local btn = Instance.new("TextButton", mainFrame)
    btn.Size = UDim2.new(0, 300, 0, 40)
    btn.Position = position
    btn.Text = name
    btn.Font = Enum.Font.FredokaOne
    btn.TextScaled = true
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.BackgroundColor3 = Color3.fromRGB(255, 105, 180)
    local btnCorner = Instance.new("UICorner", btn)
    btnCorner.CornerRadius = UDim.new(0, 10)
    btn.MouseButton1Click:Connect(callback)
end

-- Buttons
createButton("üåë Dark Spawner Rayfield", UDim2.new(0, 50, 0, 70), function()
    local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()
    Spawner.Load()
end)

createButton("üé≤ Egg Randomizer", UDim2.new(0, 50, 0, 120), function()
