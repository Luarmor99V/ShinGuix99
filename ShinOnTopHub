-- Toggle Button
local toggle = Instance.new("TextButton", gui)
toggle.Size = UDim2.new(0, 120, 0, 40)
toggle.Position = UDim2.new(0, 10, 0.5, -20)
toggle.Text = "ðŸŒ¸ Open UI"
toggle.Font = Enum.Font.GothamBold
toggle.TextSize = 18
toggle.BackgroundColor3 = Color3.fromRGB(255, 160, 180)
toggle.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", toggle).CornerRadius = UDim.new(0, 8)
toggle.MouseButton1Click:Connect(function()
	frame.Visible = not frame.Visible
end)

-- Dropdown helper
local function createDropdown(parent, titleText, getOptionsFunc, onSelect)
	local label = Instance.new("TextLabel", parent)
	label.Text = titleText
	label.Font = Enum.Font.Gotham
	label.TextSize = 14
	label.TextColor3 = Color3.new(1,1,1)
	label.BackgroundTransparency = 1
	label.Size = UDim2.new(1, -20, 0, 20)

	local dropdown = Instance.new("TextButton", parent)
	dropdown.Size = UDim2.new(1, -20, 0, 30)
	dropdown.Position = UDim2.new(0, 10, 0, label.Position.Y.Offset + 20)
	dropdown.BackgroundColor3 = Color3.fromRGB(255, 160, 180)
	dropdown.Text = "Select..."
	dropdown.TextColor3 = Color3.new(1,1,1)
	dropdown.Font = Enum.Font.Gotham
	dropdown.TextSize = 14
	Instance.new("UICorner", dropdown)

	dropdown.MouseButton1Click:Connect(function()
		local opts = getOptionsFunc()
		for _, name in ipairs(opts) do
			local btn = Instance.new("TextButton", parent)
			btn.Size = UDim2.new(1, -20, 0, 25)
			btn.Position = UDim2.new(0, 10, 0, dropdown.Position.Y.Offset + 35 + (_-1)*28)
			btn.BackgroundColor3 = Color3.fromRGB(255, 200, 210)
			btn.Text = name
			btn.TextColor3 = Color3.new(1,1,1)
			btn.Font = Enum.Font.Gotham
			btn.TextSize = 14
			Instance.new("UICorner", btn)

			btn.MouseButton1Click:Connect(function()
				onSelect(name)
				btn:Destroy()
			end)
			task.delay(5, function() if btn and btn.Parent then btn:Destroy() end end)
		end
	end)
end

-- KG and Age Inputs
local kgBox = Instance.new("TextBox", frame)
kgBox.Size = UDim2.new(0.45, -15, 0, 30)
kgBox.Position = UDim2.new(0.025, 0, 0.2, 0)
kgBox.PlaceholderText = "Pet KG"
kgBox.BackgroundColor3 = Color3.fromRGB(255, 200, 210)
kgBox.Font = Enum.Font.Gotham
kgBox.TextColor3 = Color3.new(1,1,1)
kgBox.TextSize = 14
Instance.new("UICorner", kgBox)

local ageBox = Instance.new("TextBox", frame)
ageBox.Size = UDim2.new(0.45, -15, 0, 30)
ageBox.Position = UDim2.new(0.525, 0, 0.2, 0)
ageBox.PlaceholderText = "Pet Age"
ageBox.BackgroundColor3 = Color3.fromRGB(255, 200, 210)
ageBox.Font = Enum.Font.Gotham
ageBox.TextColor3 = Color3.new(1,1,1)
ageBox.TextSize = 14
Instance.new("UICorner", ageBox)

-- Pet Dropdown
createDropdown(frame, "Spawn Pet", Spawner.GetPets, function(name)
	local kg = tonumber(kgBox.Text) or 1
	local age = tonumber(ageBox.Text) or 1
	Spawner.SpawnPet(name, kg, age)
end)

-- Seed Dropdown
createDropdown(frame, "Spawn Seed", Spawner.GetSeeds, function(name)
	Spawner.SpawnSeed(name)
end)

-- Egg Dropdown
createDropdown(frame, "Spawn Egg", Spawner.GetEggs, function(name)
	Spawner.SpawnEgg(name)
end)

-- Spin Dropdown
createDropdown(frame, "Spin Plant", Spawner.GetSeeds, function(name)
	Spawner.Spin(name)
end)
